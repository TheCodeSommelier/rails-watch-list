<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.comment %> <%= bookmark.movie.title %> <%= link_to "Delete!", destroy_bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
